CREATE DATABASE DB_ENVIOMERCA_

USE DB_ENVIOMERCA_

create TABLE EMPRESA(
ORGN_RIF VARCHAR (10) PRIMARY KEY NOT NULL,
ORGN_NOM VARCHAR (20),
ORGN_ACT VARCHAR (20),
ORGN_CIUDAD VARCHAR (20),
ORGN_DIR VARCHAR (30),
ORGN_TEL INT,
ORGN_CEL INT

)

create TABLE DESTINATARIO(
DEST_ID VARCHAR (10) PRIMARY KEY NOT NULL,
DEST_NOMBRE VARCHAR (20),
DEST_COD_CIUDAD INT,
DEST_CIUDAD VARCHAR (10),
DEST_DIR VARCHAR (20),
DEST_TEL INT,
DEST_KM INT
)

create TABLE PAQUETE(
CODIGO VARCHAR (10) PRIMARY KEY NOT NULL,
TIPO VARCHAR (15),
NOMBRE VARCHAR (20),
DESCRIPCION VARCHAR (50),
VALR_FLETE INT
)

CREATE TABLE GUIA(
GUIA_NO VARCHAR (20) PRIMARY KEY NOT NULL,
GUIA_FECHA DATETIME,
GUIA_HORA DATETIME,
IDEmpresa varchar (10),
IDDestinatario varchar (10),
IDPaquete varchar (10),
Foreign Key(IDEmpresa) REFERENCES EMPRESA,
Foreign Key(IDDestinatario) REFERENCES DESTINATARIO,
Foreign Key(IDPaquete) REFERENCES PAQUETE
)
