CREATE DATABASE DB_PRESTAMOLIBRO

USE DB_PRESTAMOLIBRO

CREATE TABLE AUTOR(
ID_AUTOR VARCHAR (10) PRIMARY KEY NOT NULL,
NOMBRE_AUTOR VARCHAR (20)
)

CREATE TABLE EDITORIAL(
ID_EDITORIAL VARCHAR (10) PRIMARY KEY NOT NULL,
NOMBRE_EDITORIAL VARCHAR (20)
)

CREATE TABLE LECTOR(
ID_LECTOR VARCHAR (10) PRIMARY KEY NOT NULL,
NOMBRE_LECTOR VARCHAR (20),
TELEFONO_LECTOR INT,
CORREO_LECTOR VARCHAR (20),
DIRECCION_LECTOR VARCHAR (20)
)

CREATE TABLE LIBRO(
CODIGO_LIBRO VARCHAR (10) PRIMARY KEY NOT NULL,
TITULO_LIBRO VARCHAR (20),
NUMERO_AUTOR VARCHAR (10),
NUMERO_EDITORIAL VARCHAR (10),
FOREIGN KEY(NUMERO_AUTOR) REFERENCES AUTOR,
FOREIGN KEY(NUMERO_EDITORIAL) REFERENCES EDITORIAL
)

CREATE TABLE PRESTAMO(
ID_PRESTAMO VARCHAR (10) PRIMARY KEY NOT NULL,
NUMERO_LIBRO VARCHAR (10),
NUMERO_LECTOR VARCHAR (10),
FECHA_PRESTAMO DATETIME,
FECHA_DEVOLUCION DATETIME,
FOREIGN KEY (NUMERO_LIBRO) REFERENCES LIBRO,
FOREIGN KEY (NUMERO_LECTOR) REFERENCES LECTOR,


)
