CREATE DATABASE DB_REPORTEMATRICULA

USE DB_REPORTEMATRICULA

CREATE TABLE OFICINA(
ID_OFICINA VARCHAR (10) PRIMARY KEY NOT NULL,
SECCION VARCHAR (20)
)

create TABLE DOCENTE(
CODIGO_DOCENTE VARCHAR (10) PRIMARY KEY NOT NULL,
NOMBRE_DOCENTE VARCHAR (15),
ID_OFICINA VARCHAR (10),
TELEFONO INT,
CORREO VARCHAR (20)
FOREIGN KEY (ID_OFICINA) REFERENCES OFICINA
)

create TABLE CURSO(
CODIGO_CURSO VARCHAR (10) PRIMARY KEY NOT NULL,
NOMBRE_CURSO VARCHAR (20),
ID_DOCENTE VARCHAR (10)
FOREIGN KEY (ID_DOCENTE) REFERENCES DOCENTE
)

create TABLE ALUMNO(
CODIGO_ALUMNO VARCHAR (10) PRIMARY KEY NOT NULL,
NOMBRE_ALUMNO VARCHAR (20),
ESPECIALIDAD VARCHAR (20),
ID_CURSO VARCHAR (10)
FOREIGN KEY (ID_CURSO) REFERENCES CURSO
)
