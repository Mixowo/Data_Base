CREATE DATABASE DB_TIENDAVIDEO

USE DB_TIENDAVIDEO


CREATE TABLE PELICULAS(
ID_PELICULA VARCHAR (10) PRIMARY KEY NOT NULL,
NOM_PELICULA VARCHAR (15),
CATEGORIA_PELICULA VARCHAR (10)
)

create TABLE CASETE(
ID_CASETE VARCHAR (10) PRIMARY KEY NOT NULL,
FORM_CASETE VARCHAR (15),
NUM_PELICULA VARCHAR (10),
FOREIGN KEY (NUM_PELICULA) REFERENCES PELICULAS
)

create TABLE ACTORES(
ID_ACTOR VARCHAR (10) PRIMARY KEY NOT NULL,
NOM_ACTOR VARCHAR (10),
NOM_REAL_ACTOR VARCHAR (20),
FECHA_ACTOR INT
)

create TABLE REPARTO(
NUM_PELICULA VARCHAR (10),
NUM_ACTOR VARCHAR (10),
FOREIGN KEY (NUM_PELICULA) REFERENCES PELICULAS,
FOREIGN KEY (NUM_ACTOR) REFERENCES ACTORES
)

create TABLE CLIENTES(
ID_CLIENTE VARCHAR (10) PRIMARY KEY NOT NULL,
NOM_CLIENTE VARCHAR (15),
TEL_CLIENTE INT,
DIRECCION_CLIENTE VARCHAR (10),
CREDITO_CLIENTE INT
)

create TABLE ALQUILER(
ID_ALQUILER VARCHAR (10) PRIMARY KEY NOT NULL,
MIEMBRO_CLIENTE VARCHAR (15),
ID_CASETE VARCHAR (20),
FECHA_ALQUILER DATETIME,
DEVOLUCION_ALQUILER DATETIME,
)

create TABLE ALQUILER_CLIENTE(
NUM_ALQUILER VARCHAR (10),
NUM_CLIENTES VARCHAR (10),
FOREIGN KEY (NUM_ALQUILER) REFERENCES ALQUILER,
FOREIGN KEY (NUM_CLIENTES) REFERENCES CLIENTES
)

create TABLE VENTA(
ID_VENTA VARCHAR (10) PRIMARY KEY NOT NULL,
NUM_ALQUILER VARCHAR (10),
NUM_CASETE VARCHAR (10),
FOREIGN KEY (NUM_ALQUILER) REFERENCES ALQUILER,
FOREIGN KEY (NUM_CASETE) REFERENCES CASETE
)
