CREATE DATABASE DB_COLOMBIAN_SYSTEMS

USE DB_COLOMBIAN_SYSTEMS

create TABLE CLIENTES(
RIF_CLIENTE VARCHAR (10) PRIMARY KEY NOT NULL,
NOM_CLIENTE VARCHAR (15),
DIR_CLIENTE VARCHAR (10),
CIUDAD_CLIENTE VARCHAR (10),
TEL_CLIENTE VARCHAR (10)
)

CREATE TABLE FACTURAS(
ID_FACTURA VARCHAR (10) PRIMARY KEY NOT NULL,
FECHA_FACTURA VARCHAR (15),
CLIENTES VARCHAR (10),
FOREIGN KEY (CLIENTES) REFERENCES CLIENTES
)

create TABLE PRODUCTO(
COD_PROD VARCHAR (10) PRIMARY KEY NOT NULL,
DESCRIPCION VARCHAR (10),
VAL_UNIT INT,
)

create TABLE DETALLES_FACTURA(
NUM_FACTURA VARCHAR (10),
COD_FACTURA VARCHAR (10),
CATEGORIA VARCHAR (20),
PRODUCTO VARCHAR (10),
FOREIGN KEY (PRODUCTO) REFERENCES PRODUCTO,
FOREIGN KEY (NUM_FACTURA) REFERENCES FACTURAS,
FOREIGN KEY (COD_FACTURA) REFERENCES FACTURAS

)

create TABLE ORDEN(
NUM_FACTURA VARCHAR (10),
RIF_CLIENTE VARCHAR (10),
COD_PRODUCTO VARCHAR (10),
CANT_PRODUCTO VARCHAR (15),
FOREIGN KEY (NUM_FACTURA) REFERENCES FACTURAS,
FOREIGN KEY (RIF_CLIENTE) REFERENCES CLIENTES,
FOREIGN KEY (COD_PRODUCTO) REFERENCES PRODUCTO
)
